<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
	android:id="@+id/trip_package_container"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<TextView
		android:id="@+id/main_entity_title_textview"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginEnd="8dp"
		android:layout_marginStart="16dp"
		android:layout_marginTop="16dp"
		tools:text="@string/detail_entitiy_title_textview"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/main_entity_imageview"
		android:layout_marginRight="8dp"
		android:layout_marginLeft="16dp"/>

	<android.support.v7.widget.AppCompatImageView
		android:id="@+id/main_entity_imageview"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:layout_marginEnd="16dp"
		android:layout_marginStart="16dp"
		android:scaleType="centerCrop"
		android:transitionName="@string/trip_package_imageview_transition_name"
		app:layout_constraintDimensionRatio="H,4:3"
		android:layout_marginTop="16dp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:srcCompat="@drawable/ic_placeholder_map" />


</android.support.constraint.ConstraintLayout>